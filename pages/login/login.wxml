<!--pages/login.wxml-->
<form bindsubmit="userSubmit" wx:if="{{loginForm}}" class=" loginForm">
    <van-cell-group>
        <van-field model:value="{{ phone }}" type="number" label="手机号码" placeholder="请输入手机号码" />
        <van-field model:value="{{ password }}" type="password" label="密码" placeholder="请输入密码" error-message="{{errMsgPassword}}"  />


                <van-button type="primary" form-type="submit" size="large" class="loginButton">登录</van-button>
                <van-button bind:click="register" size="large" class="loginButton">注册</van-button>
    </van-cell-group>
</form>




